<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="A1" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern"
             value="[%r][%-4p][%t][%c{1}][%M] - %m%n"/>
    </layout>
  </appender>

  <appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="file" value="log4j.log" />
    <param name="DatePattern" value="'.'yyyy-MM-dd" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%m%n" />
    </layout>
  </appender>

  <logger name="com.tailf.test" additivity="false" >
    <level value="debug" />
    <appender-ref ref="A1"/>
  </logger>

  <logger name="com.tailf.test.cdb2.TestMaapi" additivity="false" >
    <level value="debug" />
    <appender-ref ref="FILE"/>
  </logger>


  <logger name="com.tailf.cdb" additivity="false" >
    <level value="warn" />
    <appender-ref ref="A1"/>
  </logger>


  <logger name="com.tailf.conf" additivity="false" >
    <level value="warn" />
    <appender-ref ref="A1"/>
  </logger>

  <logger name="com.tailf.conf.ConfInternal" additivity="false" >
    <level value="warn" />
    <appender-ref ref="A1"/>
  </logger>


  <logger name="PROTO_LOGGER" additivity="false" >
    <level value="warn" />
    <appender-ref ref="A1"/>
  </logger>


  <logger name="com.tailf.maapi" additivity="false" >
    <level value="warn" />
    <appender-ref ref="A1"/>
  </logger>

  <logger name="com.tailf.test.cdb2" additivity="false" >
    <level value="debug" />
    <appender-ref ref="A1"/>
  </logger>

  <logger name="com.tailf.navu.NavuCdbSubscribers" additivity="false" >
    <level value="warn" />
    <appender-ref ref="A1"/>
  </logger>

  <root>
    <priority value ="warn" />
    <appender-ref ref="A1" />
  </root>
</log4j:configuration>





